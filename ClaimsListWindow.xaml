<Window x:Class="ContractMontlhyClaimStatus.ClaimsListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Claims List" Height="520" Width="820">
    <Grid Margin="8">
        <StackPanel>
            <TextBlock Text="All Claims" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>
            <DataGrid x:Name="DgClaims" AutoGenerateColumns="False" IsReadOnly="True" CanUserAddRows="False"
                      SelectionMode="Single" Height="380">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Lecturer" Binding="{Binding LecturerName}" Width="150"/>
                    <DataGridTextColumn Header="Hours" Binding="{Binding HoursWorked}" Width="60"/>
                    <DataGridTextColumn Header="Rate (R)" Binding="{Binding HourlyRate}" Width="80"/>
                    <DataGridTextColumn Header="Total (R)" Binding="{Binding TotalAmount}" Width="100"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="90"/>
                    <DataGridTextColumn Header="Document" Binding="{Binding DocumentFileName}" Width="180"/>
                    <DataGridTemplateColumn Header="Actions" Width="160">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Approve" Padding="6,2" Margin="4,0"
                                            Click="BtnApprove_Click" />
                                    <Button Content="Reject" Padding="6,2" Margin="4,0"
                                            Click="BtnReject_Click" />
                                    <Button Content="Open" Padding="6,2" Margin="4,0"
                                            Click="BtnOpenDoc_Click" />
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8,0,0">
                <Button Content="Refresh" Click="BtnRefresh_Click" Width="90" />
                <Button Content="Close" Click="BtnClose_Click" Margin="8,0,0,0" Width="90" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>