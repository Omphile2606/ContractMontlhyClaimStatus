<Window x:Class="ContractMontlhyClaimStatus.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Claim" Height="480" Width="420">
    <Grid Margin="12">
        <StackPanel>
            <TextBlock Text="Submit Claim" FontSize="18" FontWeight="Bold" Margin="0,0,0,8"/>

            <TextBlock Text="Lecturer Name"/>
            <TextBox x:Name="TxtLecturerName" Margin="0,2,0,6"/>

            <TextBlock Text="Hours Worked"/>
            <TextBox x:Name="TxtHoursWorked" Margin="0,2,0,6"/>

            <TextBlock Text="Hourly Rate (R)" />
            <TextBox x:Name="TxtHourlyRate" Margin="0,2,0,6"/>

            <TextBlock Text="Notes (optional)"/>
            <TextBox x:Name="TxtNotes" Margin="0,2,0,6" Height="60" AcceptsReturn="True"/>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,6,0,0">
                <Button x:Name="BtnUpload" Content="Upload Document" Click="BtnUpload_Click" Width="130"/>
                <TextBlock x:Name="TxtFileName" Margin="8,6,0,0" VerticalAlignment="Center" FontStyle="Italic"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,12,0,0">
                <Button Content="Submit Claim" Click="BtnSubmit_Click" Width="110" />
                <Button Content="View Claims" Click="BtnViewClaims_Click" Margin="8,0,0,0" Width="110" />
            </StackPanel>

            <TextBlock x:Name="TxtStatus" Margin="0,12,0,0" Foreground="Green"/>
        </StackPanel>
    </Grid>
</Window>